   Clipboard Manager Config - Enhanced Modern Style
   â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */

@import "~/.config/rofi/config.rasi"

/* â”€â”€â”€ Configuration â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
configuration {
    modi:                    "drun";
    show-icons:              false;
    display-drun:            "ğŸ“‹";
}

/* â”€â”€â”€ Window â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
window {
    transparency:            "real";
    location:                center;
    anchor:                  center;
    fullscreen:              false;
    width:                   900px;
    height:                  600px;
    border-radius:           20px;
    cursor:                  "default";
    background-color:        rgba(0, 0, 0, 0.92);
    border:                  3px;
    border-color:            @accent;
}

/* â”€â”€â”€ Mainbox â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
mainbox {
    enabled:                 true;
    spacing:                 0px;
    margin:                  0px;
    padding:                 24px;
    background-color:        transparent;
    children:                [ "inputbar", "message", "listview" ];
}

/* â”€â”€â”€ Inputbar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
inputbar {
    enabled:                 true;
    spacing:                 12px;
    margin:                  0px 0px 16px 0px;
    padding:                 18px 22px;
    border-radius:           16px;
    background-color:        @bg1;
    text-color:              @fg0;
    border:                  2px solid;
    border-color:            rgba(255, 255, 255, 0.08);
    children:                [ "prompt", "entry" ];
}

prompt {
    enabled:                 true;
    background-color:        transparent;
    text-color:              @accent;
    font:                    "FiraCode Nerd Font Bold 14";
}

/* â”€â”€â”€ Entry â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
entry {
    enabled:                 true;
    background-color:        transparent;
    text-color:              @fg0;
    cursor:                  text;
    placeholder:             "Type to search clipboard history...";
    placeholder-color:       rgba(255, 255, 255, 0.35);
    font:                    "FiraCode Nerd Font 12";
}

/* â”€â”€â”€ Listview â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
listview {
    enabled:                 true;
    columns:                 1;
    lines:                   9;
    cycle:                   true;
    dynamic:                 true;
    scrollbar:               true;
    layout:                  vertical;
    reverse:                 false;
    fixed-height:            true;
    fixed-columns:           true;
    spacing:                 10px;
    margin:                  0px;
    padding:                 0px;
    background-color:        transparent;
}

/* â”€â”€â”€ Scrollbar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
scrollbar {
    handle-width:            4px;
    handle-color:            @accent;
    border-radius:           8px;
    background-color:        rgba(255, 255, 255, 0.08);
    margin:                  0px 0px 0px 12px;
    padding:                 2px;
}

/* â”€â”€â”€ Elements â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
element {
    enabled:                 true;
    spacing:                 12px;
    margin:                  0px;
    padding:                 16px 20px;
    border-radius:           14px;
    background-color:        @bg1;
    text-color:              @fg0;
    cursor:                  pointer;
    border:                  2px solid;
    border-color:            transparent;
    orientation:             horizontal;
}

element normal.normal {
    background-color:        @bg1;
    text-color:              @fg0;
    border-color:            rgba(255, 255, 255, 0.05);
}

element selected.normal {
    background-color:        @accent;
    text-color:              @bg0;
    border-color:            @accent;
}


element-icon {
    background-color:        transparent;
    text-color:              inherit;
    size:                    0px;
    cursor:                  inherit;
}

element-text {
    background-color:        transparent;
    text-color:              inherit;
    cursor:                  inherit;
    horizontal-align:        0.0;
    vertical-align:          0.5;
    font:                    "FiraCode Nerd Font 11";
}

element-text selected.normal {
    text-color:              @bg0;
    font:                    "FiraCode Nerd Font Bold 11";
}

/* â”€â”€â”€ Message â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
message {
    enabled:                 true;
    margin:                  0px 0px 14px 0px;
    padding:                 0px;
    border-radius:           14px;
    background-color:        transparent;
}

textbox {
    padding:                 16px 20px;
    border-radius:           14px;
    background-color:        @bg1;
    text-color:              @accent;
    horizontal-align:        0.0;
    vertical-align:          0.5;
    border:                  2px solid;
    border-color:            rgba(255, 255, 255, 0.05);
    font:                    "FiraCode Nerd Font 11";
    markup:                  true;
}

/* â”€â”€â”€ Error Message â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
error-message {
    padding:                 20px;
    border-radius:           14px;
    background-color:        rgba(255, 0, 0, 0.1);
    text-color:              #ff6b6b;
    border:                  2px solid;
    border-color:            rgba(255, 0, 0, 0.3);
}
